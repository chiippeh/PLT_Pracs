COMPILER TrainsV2 $CN
/* Grammar for simple railway trains
   P.D. Terry, Rhodes University */

IGNORECASE

COMMENTS FROM "(*" TO "*)" NESTED

IGNORE CHR(0) .. CHR(31)

PRODUCTIONS
  TrainsV2  = { OneTrain } EOF .
  OneTrain  = LocoPart [ Truck GoodsPart | HumanPart | "brake"] SYNC "." .
  LocoPart  = "loco" { "loco" } . 
  GoodsPart = {"fuel"} ( Truck (GoodsPart | HumanPart) | "brake" ) .
  HumanPart = { "coach" } "guard" .
  Truck     = "coal" | "closed" | "open" | "cattle" .
END TrainsV2.
